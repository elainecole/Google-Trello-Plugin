<?xml version="1.0" encoding="UTF-8" ?>

<Module>
    <ModulePrefs title="Robin" scrolling="true" description="Trello Plugin" title-url="https://robin-app.herokuapp.com/" author="Elaine Cole" thumbnail="http://elainemcole.com/robinsmall.png">
        <Require feature="google.calendar-0.5"/>
        <Require feature="dynamic-height"/>
        <Require feature="tabs"/>
        <Require feature="minimessage"/>
    </ModulePrefs>
    <Content type="html" view="home">
        <![CDATA[
        <!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
        <html>
            <body>
                <style>
                body {
                    margin: 0;
                    padding: 0;
                    overflow: hidden;
                    font-family: 'Lato', sans-serif;
                }
                center {
                    font-weight: 400;
                    font-size: 20px;
                    color: #c41c1c;
                }
                .content {
                    font-weight: 400;
                    font-size: 12px;
                    color: #000;
                    padding-top: 60px;
                    padding-bottom: 100px;
                }
                </style>
                <center>
                    Welcome to Robin
                </center>
                <div class="content">
                    Have you logged in yet?
                </div>
                <div class="footer" style="text-align: right;">
                    <img src="http://elainemcole.com/robinsmall.png" alt="logo" height="32" width="32">
                </div>
            </body>
            <script> // Force the screen to resize
            gadgets.window.adjustHeight();
            </script>
        </html>

        ]]>
    </Content>
    <Content type="html" view="canvas">
        <![CDATA[
          Hello, big world!
        ]]>
    </Content>
</Module>
