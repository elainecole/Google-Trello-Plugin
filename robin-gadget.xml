<?xml version="1.0" encoding="UTF-8" ?>

<Module>
    <ModulePrefs title="Robin" scrolling="true" description="Trello Plugin" title-url="https://robin-app.herokuapp.com/" author="Elaine Cole" thumbnail="https://elainemcole.com/robinsmall.png">
        <Require feature="google.calendar-0.5"/>
        <Require feature="dynamic-height"/>
        <Require feature="tabs"/>
        <Require feature="minimessage"/>
    </ModulePrefs>
    <Content type="html" view="home">
        <![CDATA[
        <!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
        <html>
            <body>
                <style>
                body {
                    margin: 0;
                    padding: 0;
                    overflow: hidden;
                    font-family: 'Lato', sans-serif;
                }
                center {
                    font-weight: 400;
                    font-size: 20px;
                    color: #c41c1c;
                }
                .content {
                    font-weight: 400;
                    font-size: 12px;
                    color: #000;
                    padding-top: 60px;
                    padding-bottom: 100px;
                }
                .btn {
                  display: inline-block;
                  padding: 15px 25px;
                  font-size: 24px;
                  cursor: pointer;
                  text-align: center;
                  text-decoration: none;
                  outline: none;
                  color: #fff;
                  background-color: #c41c1c;
                  border: none;
                  border-radius: 15px;
                  box-shadow: 0 9px #999;
                  height: 100%;
                  }

                  .btn:hover {background-color: #c41c1c; box-shadow: 0 9px #999;}

                  .btn:active {
                  background-color: #c41c1c;
                  box-shadow: 0 5px #666;
                  transform: translateY(4px);
                  }
                  .btn:focus {
                  background-color: #c41c1c;
                  box-shadow: 0 5px #666;
                  transform: translateY(4px);
                  }
                  a {
                      color: #000;
                  }
                </style>
                <center>
                    Robin
                </center>
                <div class="content">
                    <div class="trello-card">
                        <div class="">
                            <strong>Homework #1</strong>
                        </div>
                        <div class="">
                            Due: Tomorrow
                        </div>
                        <div class="">
                            Board: Homework
                        </div>
                    </div>
                    <div class="trello-card">
                        <div class="">
                            <strong>Exam #1</strong>
                        </div>
                        <div class="">
                            Due: Thursday
                        </div>
                        <div class="">
                            Board: Homework
                        </div>
                    </div>
                    <div class="trello-card">
                        <div class="">
                            <strong>Meeting</strong>
                        </div>
                        <div class="">
                            Due: Saturday
                        </div>
                        <div class="">
                            Board: Events
                        </div>
                    </div>
                </div>
                <div class="foot">
                    <small>
                        <a href="http://robin-app.heroku.com/auth/logout" style="color: #000" target="_top">Log out</a>
                        </small>
                        <a style="padding-left: 80px;" href="http://robin-app.heroku.com" target="_top">
                            <img src="https://elainemcole.com/robinsmall.png" alt="logo" height="32" width="32">
                        </a>
                </div>
            </body>
            <script> // Force the screen to resize
            gadgets.window.adjustHeight();
            // $.ajax({url: ‘url’, success: function (data) { console.log(data)}});
            </script>
        </html>

        ]]>
    </Content>
    <Content type="html" view="canvas">
        <![CDATA[
          Hello, big world!
        ]]>
    </Content>
</Module>
